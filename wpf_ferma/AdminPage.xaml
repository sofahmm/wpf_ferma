            <Button Name="btn_retNetwork" Height="55" Content="Розничные сети" Margin="10" Click="btn_click3"/>
            <Button Name="btn_SortCentr" Height="55" Content="Сортировочные центры" Margin="10" Click="btn_click4"/>
            <Button Name="btn_SortCentrReport" Height="55" Content="Отчет из сортировочных центров" Margin="10" Click="btn_click5" Cursor="Cross"/>
