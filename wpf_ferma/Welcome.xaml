<Page x:Class="wpf_ferma.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf_ferma"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome">

    <Grid>
        <Grid Margin="0,99,0,-0.4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Выберите вашу должность:" Grid.Column="1" Grid.Row="0" FontWeight="Bold" FontSize="28" TextWrapping="Wrap" TextAlignment="Center"/>           
            <Button x:Name="btn_admin" Click="admin_click" Content="Администратор" Grid.Column="1" Grid.Row="1" Margin="10"/>
            <Button Content="Ветеринар" Name="btn_Vet" Click="vet_click" Grid.Column="1" Grid.Row="2" Margin="10"/>
            <Button Content="Курьер" Name="btn_Cour" Click="Cour_click"  Grid.Column="1" Grid.Row="3" Margin="10"/>
        </Grid> 
    
    </Grid>
</Page>
